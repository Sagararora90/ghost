{
  "name": "ghost",
  "version": "1.0.4",
  "description": "A note-taking app that stays invisible during screen sharing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "author": "InvisibleNotes",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-store": "^8.1.0",
    "jimp": "^0.16.1",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "screenshot-desktop": "^1.15.3",
    "tesseract.js": "^7.0.0",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.ghost.sh",
    "productName": "Ghost",
    "win": {
      "target": "zip",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
